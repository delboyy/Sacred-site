---
import BaseLayout from '../layouts/BaseLayout.astro';
import commerce from '../../config/commerce.json';

const productTitle = "Menopause Sleep Recovery Guide - Sacred";
const productDescription = "A comprehensive 50-page guide to navigating menopause naturally with time-tested remedies, lifestyle adjustments, and nutritional support.";
const productImage = "/assets/images/ankh-logo.png";
const productData = commerce.product || {};
const productName = productData.name || "Menopause Sleep Recovery Guide";
const productPrice = productData.price || 12.99;
const productCurrency = productData.currency || "USD";
const productUrl = productData.url || "https://gumroad.com/checkout?_gl=1*15j4sn4*_ga*MTYwNTg2ODE2OS4xNzU5NTI1MDEz*_ga_6LJN6D94N6*czE3NjEzMjAyNTUkbzE0JGcxJHQxNzYxMzIxOTE5JGo1MSRsMCRoMA..";
const productId = productData.id || "menopause-relief";
const productPriceDisplay = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: productCurrency,
  minimumFractionDigits: 2,
  maximumFractionDigits: 2
}).format(productPrice);

const productStructuredData = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": productName,
  "description": productDescription,
  "image": `https://sacred-site.com${productImage}`,
  "brand": {
    "@type": "Brand",
    "name": "Sacred"
  },
  "offers": {
    "@type": "Offer",
    "price": productPrice,
    "priceCurrency": productCurrency,
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "Sacred"
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "387"
  }
};
---

<BaseLayout
  title={productTitle}
  description={productDescription}
  image={productImage}
  url="/product"
  type="product"
  structuredData={productStructuredData}
>
  <main class="product-page">
    <section class="product-page__hero">
      <div class="product-page__container">
        <div class="product-page__media">
          <div class="gumroad-embed gumroad-embed--product-card">
            <div class="gumroad-product-embed" data-gumroad-product-id={productId} data-commerce-product-id>
              <a data-commerce-url href={productUrl}>Buy the {productName}</a>
            </div>
          </div>
        </div>
        <div class="product-page__details">
          <h1 data-commerce-name>{productName}</h1>
          <p class="product-page__description">A comprehensive, natural roadmap that helps you balance hormones, sleep deeply, and reclaim lasting energy.</p>
          <div class="product-page__pricing">
            <span class="product-page__price">{productPriceDisplay}</span>
            <span class="product-page__badge">Digital download • Instant access</span>
          </div>
          <ul class="product-page__list">
            <li>7-Day Hormone Reset Protocol</li>
            <li>12 Natural Remedies for Hot Flashes</li>
            <li>Sleep Restoration Blueprint</li>
            <li>Mood &amp; Energy Stabilization Techniques</li>
            <li>Quick Reference Cheat Sheets &amp; Recipes</li>
          </ul>
          <a class="gumroad-button btn btn--primary btn--lg" data-commerce-url href={productUrl} target="_blank" rel="noopener">
            Start Your Transformation - {productPriceDisplay}
          </a>
          <p class="product-page__guarantee">✓ 60-Day Money-Back Guarantee</p>
        </div>
      </div>
    </section>
  </main>
  <script src="https://gumroad.com/js/gumroad-embed.js" defer></script>
</BaseLayout>
